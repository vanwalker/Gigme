<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Création de la fiche du Groupe</h3>
        <%= simple_form_for [@offer] do |f| %>
          <%= f.input :title, label: "Nom du Groupe", placeholder: 'Nom du Groupe' %>
          <%= f.input :description, label: "Description", placeholder: 'Description de la prestation' %>
          <%= f.input :availability_start,  as: :date, html5: true, label: "Nos disponibilités" %>
          <%= f.input :availability_end, as: :date, html5: true %>
          <%= f.input :price, label: "Prix de la prestation", placeholder: 'Prix' %>
          <%# <%= f.input :place, placeholder: 'the place' %>
          <%= f.input :music_style, label: "Votre style de Musique", collection: Offer::STYLE %>
          <%= f.input :photo, as: :file, label: "Photo de votre Groupe" %>
          <%= f.submit "Créer la fiche", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
